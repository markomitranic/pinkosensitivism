---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div slot="hero">
    <h1
      class="clamp-text-[2.125rem,8vw,6.875rem] px-7 text-center font-bold tracking-[-2px]"
    >
      #PINKOSENSITIVISM
    </h1>
    <p
      class="xs:text-[12px] mx-auto mt-[30px] max-w-[860px] px-[10px] text-center text-[32px] text-white/70 sm:text-[22px] md:text-[24px] lg:text-[28px]"
    >
      /pɪŋkoʊˈsɛnsətɪvɪz(ə)m/ - Neologism that represents the collective work of
      art in the age of virtual connectivity
    </p>
  </div>

  <div class="instagram-wrap dbg">
    <ul class="social">
      <li>
        <a
          href="https://www.instagram.com/pinkosensitivism/"
          rel="nofollow"
          target="_blank"
          title="Open Pinkosensitivism Hashtag on Instagram"
        >
          <svg
            width="40px"
            height="40px"
            viewBox="0 0 40 40"
            version="1.1"
            xmlns="http://www.w3.org/2000/svg"
            xmlns:xlink="http://www.w3.org/1999/xlink"
          >
            <g
              id="Symbols"
              stroke="none"
              stroke-width="1"
              fill="none"
              fill-rule="evenodd"
            >
              <g id="instagram" fill-rule="nonzero" fill="#FFFFFF">
                <g transform="translate(4.000000, 4.000000)">
                  <circle id="Oval" fill-opacity="0.3" cx="16" cy="16" r="16"
                  ></circle>
                  <path
                    d="M19.7,9.1 L11.4,9.1 C10,9.1 8.8,10.3 8.8,11.7 L8.8,14.4 L8.8,20 C8.8,21.4 10,22.6 11.4,22.6 L19.7,22.6 C21.1,22.6 22.3,21.4 22.3,20 L22.3,14.5 L22.3,11.8 C22.3,10.3 21.1,9.1 19.7,9.1 Z M20.4,10.7 L20.7,10.7 L20.7,11 L20.7,13 L18.4,13 L18.4,10.7 L20.4,10.7 Z M13.6,14.5 C14,13.9 14.7,13.5 15.5,13.5 C16.3,13.5 17,13.9 17.4,14.5 C17.7,14.9 17.8,15.4 17.8,15.9 C17.8,17.2 16.7,18.3 15.4,18.3 C14.1,18.3 13,17.2 13,15.9 C13.2,15.3 13.3,14.9 13.6,14.5 Z M21,20 C21,20.7 20.4,21.3 19.7,21.3 L11.4,21.3 C10.7,21.3 10.1,20.7 10.1,20 L10.1,14.5 L12.1,14.5 C11.9,14.9 11.8,15.4 11.8,15.9 C11.8,17.9 13.5,19.6 15.5,19.6 C17.5,19.6 19.2,17.9 19.2,15.9 C19.2,15.4 19.1,14.9 18.9,14.5 L20.9,14.5 L20.9,20 L21,20 Z"
                    id="Shape"></path>
                </g>
              </g>
            </g>
          </svg>
        </a>
      </li>
      <li>
        <a
          href="https://www.facebook.com/pinkosensitivism/?ref=br_rs"
          rel="nofollow"
          target="_blank"
          title="Open Pinkosensitivism Page on Facebook"
        >
          <svg
            width="40px"
            height="40px"
            viewBox="0 0 40 40"
            version="1.1"
            xmlns="http://www.w3.org/2000/svg"
            xmlns:xlink="http://www.w3.org/1999/xlink"
          >
            <g
              id="Symbols"
              stroke="none"
              stroke-width="1"
              fill="none"
              fill-rule="evenodd"
            >
              <g id="facebook" fill-rule="nonzero" fill="#FFFFFF">
                <g transform="translate(4.000000, 4.000000)">
                  <circle
                    id="Oval"
                    fill-opacity="0.289147418"
                    cx="16"
                    cy="16"
                    r="16"></circle>
                  <path
                    d="M19.2,13.4 L16.9,13.4 L16.9,11.9 C16.9,11.3 17.3,11.2 17.5,11.2 L19.1,11.2 L19.1,8.7 L16.9,8.7 C14.4,8.7 13.9,10.5 13.9,11.7 L13.9,13.3 L12.5,13.3 L12.5,16 L13.9,16 L13.9,23.2 L16.9,23.2 L16.9,16 L18.9,16 L19.2,13.4 Z"
                    id="Shape"></path>
                </g>
              </g>
            </g>
          </svg>
        </a>
      </li>
    </ul>

    <ul id="instagram-grid" class="instagram-grid">
      {
        Array.from({ length: 12 }).map(() => (
          <li>
            <a
              href="https://www.instagram.com/explore/tags/pinkosensitivism/"
              target="_blank"
              rel="nofollow"
              title="Visit Pinkosensitivism Hashtag on Instagram"
            >
              <article style="background-image: url('https://pinkosensitivism.com/posts/5e6bacdc-7387-40f0-9665-43bd42a63736.png');">
                <img
                  src="https://pinkosensitivism.com/posts/5e6bacdc-7387-40f0-9665-43bd42a63736.png"
                  alt="Visit Pinkosensitivism Hashtag on Instagram"
                />
              </article>
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</Layout>
