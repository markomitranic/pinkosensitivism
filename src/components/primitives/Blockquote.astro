---
import { cn } from "~/lib/utils/cn";
import FaQuoteLeft from "../icons/FaQuoteLeft.astro";

const { class: className } = Astro.props;
---

<blockquote
  class={cn(
    "relative mx-auto my-0 w-[calc(100%-30px)] max-w-[860px] pt-[90px] pb-[40px] text-[14px] leading-[1.66]",
    "sm:w-[calc(100%-100px)] sm:text-[22px] sm:leading-[28px]",
    "mid:w-full",
    className,
  )}
>
  <FaQuoteLeft class="absolute top-0 -left-8 -z-10 w-[170px]" />
  <slot />
</blockquote>
