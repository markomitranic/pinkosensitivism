{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "astro/tsconfigs/strict",
  "include": [
    "eslint.config.js",
    "astro.config.mjs",
    ".astro/types.d.ts",
    "global.d.ts",
    "**/*.ts",
    "**/*.astro"
  ],
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json"
  }
}
